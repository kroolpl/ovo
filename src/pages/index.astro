---
import Layout from 'opoviadania-frontend/src/layouts/Layout.astro';
import { client } from 'opoviadania-frontend/lib/sanity';
import type { Article } from 'opoviadania-frontend//types';

interface ArticleWithRejection extends Article {
  rejectionReason: string;
}

let pendingArticles: Article[] = [];
let rejectedArticles: ArticleWithRejection[] = [];

try {
  // Fetch pending articles with explicit type casting
  const pendingResult = await client.fetch<Article[]>(`
    *[_type == "article" && status == "pending"] | order(publishedAt desc) {
      _id,
      title,
      author,
      publishedAt,
      tags,
      status
    }
  `);
  pendingArticles = pendingResult || [];

  // Fetch rejected articles with explicit type casting
  const rejectedResult = await client.fetch<ArticleWithRejection[]>(`
    *[_type == "article" && status == "rejected"] | order(publishedAt desc) {
      _id,
      title,
      author,
      publishedAt,
      tags,
      status,
      rejectionReason
    }
  `);
  rejectedArticles = rejectedResult || [];
} catch (error) {
  console.error('Error fetching articles:', error);
}

interface ArticleData {
  _id: string;
  title: string;
  author: string;
  publishedAt: string;
  tags?: string[];
}
---

<Layout title="Opowiadania">
  <main class="container mx-auto px-4 py-12">
    <h1 class="text-5xl font-display font-bold text-gray-900 dark:text-white mb-4 text-center">Najnowsze opowiadania</h1>
    <p class="text-gray-600 dark:text-gray-400 text-center mb-12 text-lg max-w-2xl mx-auto">
      Odkryj fascynujące historie i perspektywy naszej społeczności pisarzy.
    </p>
    
    {articles.length === 0 ? (
      <div class="text-center py-16">
        <p class="text-gray-900 dark:text-white text-xl">Nie znaleziono żadnych opowiadań.</p>
        <a href="/submit" class="inline-block mt-4 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">
          Dodaj pierwsze opowiadanie →
        </a>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article) => (
          <article class="group bg-white dark:bg-gray-800/50 backdrop-blur rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-200 dark:border-gray-700/50">
            <div class="relative">
              {article.mainImage ? (
                <img
                  src={urlFor(article.mainImage)
                    .width(600)
                    .height(400)
                    .url()}
                  alt={article.title}
                  class="w-full h-56 object-cover brightness-90 group-hover:brightness-100 transition-all duration-300"
                />
              ) : (
                <div class="w-full h-56 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 flex items-center justify-center">
                  <span class="text-gray-500 dark:text-gray-400 font-medium">Brak zdjęcia</span>
                </div>
              )}
              <div class="absolute top-0 right-0 bg-blue-500/90 backdrop-blur-sm text-white text-xs font-medium px-3 py-1 m-4 rounded-full">
                {new Date(article.publishedAt).toLocaleDateString('pl-PL', {
                  day: 'numeric',
                  month: 'long',
                  year: 'numeric'
                })}
              </div>
            </div>
            <div class="p-6">
              <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-3 line-clamp-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {article.title}
              </h2>
              <p class="text-blue-600 dark:text-blue-400 text-sm mb-4 font-medium">Autor: {article.author}</p>
              {article.tags && article.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-4">
                  {article.tags.map(tag => (
                    <a 
                      href={`/tag/${encodeURIComponent(tag)}`}
                      class="px-2 py-1 bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-300 text-xs font-medium rounded-full hover:bg-blue-200 dark:hover:bg-blue-500/30 transition-colors"
                    >
                      {tag}
                    </a>
                  ))}
                </div>
              )}
              <div class="text-gray-600 dark:text-gray-300 line-clamp-3 mb-6 leading-relaxed">
                {article.body[0]?.children[0]?.text}
              </div>
              <a 
                href={`/article/${article._id}`}
                class="block w-full bg-blue-600 hover:bg-blue-700 dark:bg-blue-600/90 dark:hover:bg-blue-500 text-white font-semibold py-3 px-4 rounded-xl transition duration-300 backdrop-blur-sm text-center"
              >
                Czytaj więcej
              </a>
            </div>
          </article>
        ))}
      </div>
    )}
  </main>
</Layout>
