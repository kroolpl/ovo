{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "types": ["node", "@astrojs/image/client"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["src/**/*", "*.ts", "*.mjs"],
  "exclude": ["node_modules"]
}
